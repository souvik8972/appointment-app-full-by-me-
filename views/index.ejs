<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Appointment Book</title>
    <link rel="stylesheet" href="/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    
      
      <nav class="navbar bg-primary" data-bs-theme="dark">
        <!-- Navbar content --><ul>
                <li><a href="/add-appointment">Add Appointment</a></li>
                <li><a href="/show-appointments">Show Appointments</a></li>
            </ul>
      </nav>
      
     
    <div class="container">
       
        
        <h2>Appointment Booking</h2>
        
        <!-- Form to add appointments -->
        <form id="appointmentForm" method="POST" action="/add-appointment">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number:</label>
                <input type="number" id="phone" name="phoneNumber" required>
            </div>
            <button id='submit' type="submit" class="submit-button">Submit</button>
        </form>

        
    </div>
    <script >
        const btn = document.querySelector("#submit");

btn.addEventListener("click", () => {
    alert("submitted");
});

    </script>
</body>
</html>
